<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControler</servlet-name>
        <servlet-class>controller.LoginControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NaviControler</servlet-name>
        <servlet-class>controller.NaviControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleViewControler</servlet-name>
        <servlet-class>controller.SingleViewControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllProduct</servlet-name>
        <servlet-class>controller.GetAllProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductByKind</servlet-name>
        <servlet-class>controller.GetProductByKind</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>controller.ResetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>controller.ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NaviControler</servlet-name>
        <url-pattern>/naviControler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleViewControler</servlet-name>
        <url-pattern>/singleView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllProduct</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductByKind</servlet-name>
        <url-pattern>/kind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
